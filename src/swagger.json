{
    "openapi": "3.0.0",
    "info": {
        "title": "Kickside Backend API",
        "version": "1.0.0",
        "description": "API documentation for the Kickside backend. This backend powers the functionalities of the Kickside platform."
    },
    "servers": [
        {
            "url": "http://localhost:7071/api"
        }
    ],
    "security": [
        {
            "BearerAuth": []
        }
    ],
    "paths": {
        "/auth/login": {
            "post": {
                "summary": "Login a user",
                "tags": [
                    "Authentication"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserLogin"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User successfully logged in."
                    },
                    "400": {
                        "description": "Invalid request body."
                    },
                    "404": {
                        "description": "User not found."
                    }
                }
            }
        },
        "/articles/create-article": {
            "post": {
                "summary": "Create a new article",
                "tags": [
                    "Articles"
                ],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/NewArticle"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Article created successfully."
                    },
                    "400": {
                        "description": "Invalid request body."
                    },
                    "409": {
                        "description": "Article already exists."
                    }
                }
            }
        },
        "/articles/get-own-articles": {
            "get": {
                "summary": "Retrieve articles owned by the user",
                "tags": [
                    "Articles"
                ],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A list of articles owned by the user.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Article"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/articles/get-own-single-article/{id}": {
            "get": {
                "summary": "Retrieve a single article owned by the user",
                "tags": [
                    "Articles"
                ],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "The ID of the article to retrieve."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Details of a single article.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Article"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Article not found."
                    }
                }
            }
        },
        "/articles/request-edit-access/{id}": {
            "post": {
                "summary": "Request edit access for an article",
                "tags": [
                    "Articles"
                ],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "The ID of the article for which edit access is requested."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Edit access requested successfully."
                    },
                    "404": {
                        "description": "Article not found."
                    },
                    "409": {
                        "description": "Edit access request already exists."
                    }
                }
            }
        },
        "/articles/journalist-edit-article/{id}": {
            "put": {
                "summary": "Edit an article by a journalist",
                "tags": [
                    "Articles"
                ],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "The ID of the article to edit."
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/EditArticle"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Article edited successfully."
                    },
                    "400": {
                        "description": "Invalid request body."
                    },
                    "404": {
                        "description": "Article not found."
                    },
                    "409": {
                        "description": "Article cannot be edited."
                    }
                }
            }
        }, 
        "/workers/create-user": {
            "post": {
                "summary": "Create a new user",
                "tags": [
                    "User Management"
                ],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateUser"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User created successfully."
                    },
                    "400": {
                        "description": "Invalid request body."
                    },
                    "409": {
                        "description": "User already exists."
                    }
                }
            }
        },
        "/workers/get-all-users": {
            "get": {
                "summary": "Retrieve all users",
                "tags": [
                    "User Management"
                ],
                "security": [
                    {
                        "BearerAuth": []
                        }
                    ],
                "responses": {
                    "200": {
                        "description": "List of all users.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/User"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/workers/disable-user": {
            "put": {
                "summary": "Admin Disable a user",
                "tags": [
                    "User Management"
                ],
                "security": [
                    {
                        "BearerAuth": []
                        }
                    ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/DisableUser"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User disabled successfully."
                    },
                    "404": {
                        "description": "User not found."
                    }
                }
            }
        },
        "/workers/enable-user/{id}": {
            "put": {
                "summary": "Admin Enable a user",
                "tags": [
                    "User Management"
                ],
                "security": [
                    {
                        "BearerAuth": []
                        }
                    ],
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "ID of the user to enable."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User enabled successfully."
                    },
                    "404": {
                        "description": "User not found."
                    }
                }
            }
        },
        "/workers/update-user": {
            "put": {
                "summary": "Admin Update user details",
                "tags": [
                    "User Management"
                ],
                "security": [
                    {
                        "BearerAuth": []
                        }
                    ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UpdateUser"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User updated successfully."
                    },
                    "404": {
                        "description": "User not found."
                    }
                }
            }
        },
        "/workers/update-user-role": {
            "put": {
                "summary": "Admin Update user role",
                "tags": [
                    "User Management"
                ],
                "security": [
                    {
                        "BearerAuth": []
                        }
                    ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UpdateRole"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User role updated successfully."
                    },
                    "404": {
                        "description": "User not found."
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "UserLogin": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email",
                        "description": "User email."
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "description": "User password."
                    }
                },
                "required": [
                    "email",
                    "password"
                ]
            },
            "NewArticle": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "description": "Title of the article."
                    },
                    "content": {
                        "type": "string",
                        "description": "Content of the article."
                    },
                    "coverImage": {
                        "type": "string"
                    },
                    "category": {
                        "type": "string"
                    }
                },
                "required": [
                    "title",
                    "content",
                    "coverImage",
                    "category"
                ]
            },
            "EditArticle": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "description": "Updated title of the article."
                    },
                    "content": {
                        "type": "string",
                        "description": "Updated content of the article."
                    }
                },
                "required": [
                    "title",
                    "content"
                ]
            },
            "Article": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "description": "Title of the article."
                    },
                    "content": {
                        "type": "string",
                        "description": "Content of the article."
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Creation date of the article."
                    }
                }
            },
            "CreateUser": {
                "type": "object",
                "properties": {
                    "firstName": {
                        "type": "string",
                        "description": "First Name of the user."
                    },
                    "lastName": {
                        "type": "string",
                        "description": "Last Name of the user."
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "description": "Email of the user."
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "description": "Password for the user."
                    },
                    "role": {
                        "type": "string",
                        "description": "Role of the user."
                    }
                },
                "required": ["name", "email", "password", "role"]
            },
            "DisableUser": {
                "type": "object",
                "properties": {
                    "userId": {
                        "type": "string",
                        "description": "ID of the user to disable."
                    }
                },
                "required": ["userId"]
            },
            "UpdateUser": {
                "type": "object",
                "properties": {
                    "userId": {
                        "type": "string",
                        "description": "ID of the user to update."
                    },
                    "firstName": {
                        "type": "string",
                        "description": "First Name of the user."
                    },
                    "lastName": {
                        "type": "string",
                        "description": "Last Name of the user."
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "description": "Updated email of the user."
                    }
                },
                "required": ["userId"]
            },
            "UpdateRole": {
                "type": "object",
                "properties": {
                    "userId": {
                        "type": "string",
                        "description": "ID of the user to update role."
                    },
                    "role": {
                        "type": "string",
                        "description": "Updated role of the user."
                    }
                },
                "required": ["userId", "role"]
            },
            "User": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "ID of the user."
                    },
                    "firstName": {
                        "type": "string",
                        "description": "First Name of the user."
                    },
                    "lastName": {
                        "type": "string",
                        "description": "Last Name of the user."
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "description": "Email of the user."
                    },
                    "role": {
                        "type": "string",
                        "description": "Role of the user."
                    }
                }
            }
            
        }
    }
}